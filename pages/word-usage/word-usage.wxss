.word-usage-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.word-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.word-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.word-spelling {
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.sound-button {
  background: none;
  border: none;
  padding: 10rpx;
}

.sound-icon {
  width: 36rpx;
  height: 36rpx;
}

.word-pronunciation {
  margin-bottom: 20rpx;
}

.phonetic {
  font-size: 28rpx;
  color: #666;
}

.translation-item {
  display: flex;
  margin-bottom: 10rpx;
}

.pos {
  font-weight: bold;
  color: #1890ff;
  width: 100rpx;
}

.meaning {
  flex: 1;
}

.sentences-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.sentence-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.sentence-item:last-child {
  border-bottom: none;
}

.time-code {
  display: block;
  font-size: 20rpx;
  color: #1890ff;
  margin-bottom: 10rpx;
}

.sentence-text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.highlight {
  background-color: #fff566;
}

.sentence-translation {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.dictionary-modal {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600px; /* 新增最大宽度限制 */
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx; /* 增加内边距 */
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  color: #333;
  z-index: 1000;
}

.dict-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx; /* 增加底部间距 */
}

.close-button {
  background: none;
  border: none;
  padding: 10rpx;
  margin-left: 20rpx;
  cursor: pointer; /* 添加鼠标悬停效果 */
}

.close-icon {
  width: 32rpx;
  height: 32rpx;
  fill: #666; /* 更改图标颜色 */
}

.sound-button {
  background: none;
  border: none;
  padding: 10rpx;
  cursor: pointer; /* 添加鼠标悬停效果 */
}

.sound-icon {
  width: 32rpx;
  height: 32rpx;
  fill: #1890ff; /* 更改图标颜色 */
}

.dict-word {
  font-size: 40rpx;
  font-weight: bold;
  color: #333; /* 更改文字颜色 */
}

.phonetic {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx; /* 增加顶部间距 */
}

.meaning-item {
  display: flex;
  margin-bottom: 20rpx; /* 增加底部间距 */
}

.pos {
  font-weight: bold;
  color: #1890ff;
  width: 80rpx;
}

.meaning {
  flex: 1;
  font-size: 28rpx; /* 更改字体大小 */
  line-height: 1.5; /* 更改行高 */
}

.more-button {
  width: 100%;
  background-color: #1890ff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx;
  font-size: 28rpx;
}