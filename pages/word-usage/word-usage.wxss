.word-usage-page {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding: 20rpx;
}

.word-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
}

.word-header {
  display: flex;
  align-items: center;
}

.word-spelling {
  font-size: 48rpx;
  font-weight: 700;
  margin-right: 16rpx;
}

.word-meta {
  flex: 1;
  color: #666;
  font-size: 26rpx;
}

.freq {
  color: #888;
}

.sound-button {
  background: none;
  border: none;
  padding: 6rpx;
}

.sound-icon {
  width: 40rpx;
  height: 40rpx;
}

.word-pronunciation {
  margin-top: 12rpx;
  display: flex;
  gap: 20rpx;
  color: #666;
  font-size: 26rpx;
}

.word-meaning {
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
}

.sentences-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.sentence-item {
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.sentence-item:last-child {
  border-bottom: none;
}

.time-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 6rpx;
  color: #888;
  font-size: 24rpx;
}

.time-code {
  color: #1890ff;
}

.course {
  color: #999;
}

.sentence-text {
  display: flex;
  flex-wrap: wrap;
  font-size: 30rpx;
  line-height: 1.6;
  color: #111;
}

.word-token {
  display: inline;
  font-size: 30rpx;
  color: inherit;
}

.word-token.word {
  padding: 0 2rpx;
}

.word-token.highlight {
  background: #fff566;
}

.word-token.plain {
  padding: 0;
}

.sentence-translation {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-top: 6rpx;
}

.empty {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

.dictionary-modal {
  position: fixed;
  background: #2b2f3a;
  color: #f0f3ff;
  padding: 28rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
  z-index: 999;
}

.dict-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.dict-title-row {
  flex: 1;
}

.dict-word-container {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
}

.favorite-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 30rpx;
  border: 1rpx solid rgba(24, 144, 255, 0.5);
}

.favorite-btn.active {
  border-color: rgba(255, 77, 79, 0.5);
}

.heart-icon {
  width: 28rpx;
  height: 28rpx;
  filter: brightness(0) saturate(100%) invert(46%) sepia(96%) saturate(1054%) hue-rotate(189deg) brightness(101%) contrast(101%); /* Blue */
}

.favorite-btn.active .heart-icon {
  filter: brightness(0) saturate(100%) invert(26%) sepia(89%) saturate(5895%) hue-rotate(352deg) brightness(97%) contrast(106%); /* Red */
}

.fav-status {
  font-size: 20rpx;
  color: #1890ff;
  font-weight: bold;
}

.favorite-btn.active .fav-status {
  color: #ff4d4f;
}

.dict-word {
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
}

.dict-phonetics {
  color: #c7d4ff;
  font-size: 24rpx;
  display: flex;
  gap: 16rpx;
  margin-top: 6rpx;
}

.dict-actions .close-button {
  background: none;
  border: none;
  color: #c7d4ff;
  font-size: 36rpx;
  padding: 4rpx 10rpx;
}

.dict-meanings {
  margin: 12rpx 0 16rpx;
}

.meaning-item {
  display: flex;
  margin-bottom: 10rpx;
  color: #e5e8f0;
  font-size: 28rpx;
  line-height: 1.5;
}

.pos {
  width: 90rpx;
  color: #ffd666;
  font-weight: 600;
}

.more-button {
  width: 100%;
  background: #ffca28;
  color: #111;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
}
