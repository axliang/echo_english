.search-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f7fb;
  padding: 24rpx;
  box-sizing: border-box;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 999rpx;
  padding: 0 16rpx 0 24rpx;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.08);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 96rpx;
  font-size: 30rpx;
  border: none;
}

.placeholder {
  color: #c0c0c0;
}

.clear-btn,
.search-btn {
  border: none;
  background: transparent;
  color: #3a8ef6;
  font-size: 28rpx;
  padding: 0 16rpx;
}

.search-btn {
  background: #1d8cf8;
  color: #fff;
  border-radius: 999rpx;
  height: 64rpx;
  line-height: 64rpx;
}

.history-bar {
  margin-top: 24rpx;
}

.history-label {
  font-size: 26rpx;
  color: #8c8c8c;
}

.history-scroll {
  margin-top: 12rpx;
}

.history-chips {
  display: inline-flex;
  gap: 16rpx;
}

.history-chip {
  padding: 12rpx 26rpx;
  background: #ffffff;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #3a8ef6;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.search-content {
  flex: 1;
  margin-top: 24rpx;
}

.word-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 24rpx 40rpx rgba(0, 0, 0, 0.05);
}

.word-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.word-text {
  font-size: 48rpx;
  font-weight: 700;
}

.audio-btn {
  border: none;
  background: #eef5ff;
  border-radius: 50%;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.audio-btn image {
  width: 36rpx;
  height: 36rpx;
}

.phonetics {
  display: flex;
  gap: 20rpx;
  margin-top: 16rpx;
  color: #6b6b6b;
}

.definitions {
  margin-top: 24rpx;
}

.definition-item {
  display: flex;
  margin-bottom: 12rpx;
}

.definition-pos {
  width: 80rpx;
  color: #3a8ef6;
  font-size: 26rpx;
}

.definition-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.examples-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.05);
  min-height: 40vh;
}

.examples-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  color: #8c8c8c;
  font-size: 24rpx;
}

.example-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}

.example-item:last-child {
  border-bottom: none;
}

.example-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #9b9b9b;
  margin-bottom: 12rpx;
}

.example-en {
  font-size: 30rpx;
  color: #111;
  line-height: 1.6;
}

.example-zh {
  font-size: 26rpx;
  color: #5f5f5f;
  margin-top: 8rpx;
}

.segment {
  display: inline;
}

.segment.highlight {
  background: #fff09f;
  border-radius: 6rpx;
}

.segment.zh.highlight {
  background: #ffe3c2;
}

.empty-hint {
  text-align: center;
  color: #a3a3a3;
  padding: 60rpx 0;
}
