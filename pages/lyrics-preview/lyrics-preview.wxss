.lyrics-preview-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #fdfdfd;
  position: relative;
}

.session-card {
  display: flex;
  align-items: center;
  background-color: #fff;
  margin: 24rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.session-cover {
  width: 110rpx;
  height: 110rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.session-info {
  flex: 1;
}

.session-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111;
}

.session-meta {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #8c8c8c;
}

.session-extra {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.session-tag {
  background: linear-gradient(135deg, #ffc53d, #fa8c16);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
}

.session-arrow {
  margin-top: 12rpx;
  color: #ccc;
  font-size: 24rpx;
}

.lyrics-list {
  flex: 1;
  margin: 0 24rpx;
  padding: 0 24rpx 180rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 18rpx rgba(0, 0, 0, 0.04);
}

.lyric-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ededed;
}

.lyric-body {
  display: flex;
  flex-direction: column;
}

.lyric-meta {
  font-size: 22rpx;
  color: #9f9f9f;
  margin-bottom: 12rpx;
}

.en-line {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  font-size: 32rpx;
  color: #1f1f1f;
  line-height: 1.7;
  margin-bottom: 8rpx;
}

.en-line-text {
  display: block;
  font-size: 32rpx;
  color: #1f1f1f;
  line-height: 1.7;
  margin-bottom: 8rpx;
}

.word-text {
  color: #1f1f1f;
}

.zh-line {
  font-size: 26rpx;
  color: #5f5f5f;
  line-height: 1.6;
}

.vocabulary-entry {
  position: fixed;
  bottom: 32rpx;
  left: 24rpx;
  right: 24rpx;
  background: linear-gradient(120deg, #34c759, #28a745);
  border-radius: 999rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 12rpx 24rpx rgba(52, 199, 89, 0.35);
}

.entry-icon {
  margin-left: 18rpx;
  font-size: 36rpx;
  line-height: 1;
}

.dictionary-modal {
  position: fixed;
  background: #1e2b3e;
  color: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.45);
  z-index: 1200;
}

.dict-tabs {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.dict-tab {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-right: 16rpx;
  padding-bottom: 6rpx;
}

.dict-tab.active {
  color: #fff;
  border-bottom: 2rpx solid #4fc3f7;
}

.dict-close {
  margin-left: auto;
  background: transparent;
  color: rgba(255, 255, 255, 0.7);
  border: none;
  font-size: 36rpx;
}

.dict-word-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 12rpx 0;
}

.dict-word {
  font-size: 44rpx;
  font-weight: 600;
}

.dict-actions {
  display: flex;
  align-items: center;
}

.dict-action-icon {
  width: 36rpx;
  height: 36rpx;
  margin-left: 20rpx;
  filter: brightness(0) invert(1);
}

.dict-phonetics {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.phonetic {
  margin-right: 16rpx;
}

.dict-more {
  margin-left: auto;
  color: #4fc3f7;
  font-size: 24rpx;
}

.dict-meanings {
  margin-top: 16rpx;
}

.meaning-item {
  display: flex;
  margin-bottom: 10rpx;
}

.pos {
  width: 80rpx;
  color: #4fc3f7;
}

.meaning {
  flex: 1;
  color: rgba(255, 255, 255, 0.9);
}

.dict-pointer {
  position: absolute;
  bottom: -24rpx;
  left: 50%;
  margin-left: -20rpx;
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 24rpx solid #1e2b3e;
}
