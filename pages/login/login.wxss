.login-page {
  min-height: 100vh;
  background: #f3f5f9;
  padding: 40rpx 36rpx 60rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.login-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.login-header {
  margin-bottom: 32rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: 600;
}

.login-sub {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-top: 12rpx;
}

.form-field {
  margin-bottom: 28rpx;
  width: 100%;
}

.form-field input {
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 18rpx;
  padding: 0 26rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background: #fafafa;
}

.error-text {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ff5f6d;
}

.submit-btn {
  width: 100%;
  border: none;
  border-radius: 20rpx;
  background: #27ae60;
  color: #fff;
  font-size: 32rpx;
  padding: 26rpx 0;
  margin-top: 8rpx;
}

.link-row {
  display: flex;
  justify-content: center;
  gap: 8rpx;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #8c8c8c;
}

.link {
  color: #1d8cf8;
}
