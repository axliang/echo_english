.register-page {
  min-height: 100vh;
  background: #f3f5f9;
  padding: 40rpx 36rpx 60rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.register-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.register-header {
  margin-bottom: 32rpx;
}

.register-title {
  font-size: 40rpx;
  font-weight: 600;
}

.register-sub {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-top: 12rpx;
}

.form-field {
  margin-bottom: 28rpx;
  width: 100%;
}

.form-field input {
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 18rpx;
  padding: 0 26rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background: #fafafa;
}

.code-field {
  display: flex;
  align-items: center;
  column-gap: 20rpx;
}

.code-field input {
  flex: 1;
  min-width: 0;
}

.code-btn {
  flex-shrink: 0;
  width: 220rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  border: none;
  border-radius: 18rpx;
  background: #1d8cf8;
  color: #fff;
  font-size: 28rpx;
}

.code-btn[disabled] {
  background: #aeb8c4;
}

.error-text {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ff5f6d;
}

.submit-btn {
  width: 100%;
  border: none;
  border-radius: 20rpx;
  background: #27ae60;
  color: #fff;
  font-size: 32rpx;
  padding: 26rpx 0;
  margin-top: 8rpx;
}

.link-row {
  display: flex;
  justify-content: center;
  gap: 8rpx;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #8c8c8c;
}

.link {
  color: #1d8cf8;
}

.records {
  margin-top: 40rpx;
}

.records-title {
  font-size: 28rpx;
  color: #6c6c6c;
  margin-bottom: 16rpx;
}

.record-item {
  background: #fff;
  border-radius: 14rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 16rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.05);
}
