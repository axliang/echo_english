.vocabulary-page {
  height: 100vh;
  background: #f8f8f8;
  display: flex;
  flex-direction: column;
}

/* 标签栏 */
.tabs-scroll {
  width: 100%;
  white-space: nowrap;
  background: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.tabs-container {
  display: flex;
  padding: 20rpx 16rpx;
}

.tab-item {
  padding: 12rpx 24rpx;
  margin: 0 8rpx;
  border-radius: 999rpx;
  background: #f5f5f5;
  display: inline-block;
}

.tab-item.active {
  background: #ffca28;
  color: #111;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 词汇总数 */
.total-count {
  padding: 20rpx 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.total-count.favorite-header {
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.count-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.favorite-header .count-text {
  color: #4caf50;
}

/* 词汇列表 */
.words-scroll {
  flex: 1;
  overflow-y: auto;
}

.words-container {
  padding: 0 32rpx;
  background: #fff;
}

.word-item {
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 收藏页特定样式 */
.favorite-item {
  padding: 24rpx 0;
}

.fav-word-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.fav-word-main {
  display: flex;
  align-items: center;
}

.fav-word-text {
  font-size: 44rpx;
  font-weight: bold;
  color: #000;
  margin-right: 16rpx;
}

.fav-sound-icon {
  width: 36rpx;
  height: 36rpx;
  filter: brightness(0) saturate(100%) invert(46%) sepia(96%) saturate(1054%) hue-rotate(189deg) brightness(101%) contrast(101%); /* 蓝色 */
}

.fav-date {
  font-size: 24rpx;
  color: #999;
}

.fav-meaning-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.fav-word-meaning {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
}

.fav-arrow {
  font-size: 40rpx;
  color: #ccc;
  margin-left: 20rpx;
  line-height: 1;
}

.word-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.word-text {
  font-size: 40rpx;
  font-weight: 600;
  color: #111;
  margin-right: 12rpx;
}

.word-frequency {
  display: flex;
  align-items: center;
}

.frequency-text {
  font-size: 28rpx;
  color: #999;
}

.word-actions {
  position: absolute;
  right: 0;
  top: 32rpx;
  display: flex;
  align-items: center;
}

.sound-button {
  border: none;
  background: none;
  padding: 8rpx;
  margin-right: 16rpx;
}

.sound-button image {
  width: 40rpx;
  height: 40rpx;
}

.arrow-right {
  font-size: 40rpx;
  color: #c0c0c0;
}

.word-meaning {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

/* 加载和空状态 */
.loading,
.empty {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 30rpx;
}

/* 适配 */
@media (max-width: 375px) {
  .word-text {
    font-size: 36rpx;
  }
  .word-meaning {
    font-size: 26rpx;
  }
}
