.discover-page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #f5f5f5;
  padding: 24rpx;
  box-sizing: border-box;
}

.discover-search {
  display: flex;
  align-items: center;
  background: #111826;
  border-radius: 24rpx;
  padding: 28rpx;
  color: #fff;
  margin-bottom: 24rpx;
  box-shadow: 0 22rpx 30rpx rgba(17, 24, 38, 0.35);
}

.search-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-icon-wrapper image {
  width: 40rpx;
  height: 40rpx;
}

.search-texts {
  flex: 1;
}

.search-title {
  font-size: 32rpx;
  font-weight: 600;
}

.search-sub {
  font-size: 24rpx;
  opacity: 0.7;
  margin-top: 6rpx;
}

.search-arrow {
  font-size: 44rpx;
  opacity: 0.7;
}

.nav-bar {
  position: relative;
  background-color: #fff;
  padding: 20rpx 0;
}

.nav-tabs {
  display: flex;
  justify-content: space-around;
  padding: 0 40rpx;
}

.nav-tab {
  font-size: 32rpx;
  color: #666;
  padding: 10rpx 20rpx;
}

.nav-tab.active {
  color: #3cc51f;
  font-weight: bold;
}

.nav-indicator {
  position: absolute;
  bottom: 0;
  height: 6rpx;
  background-color: #3cc51f;
  transition: left 0.3s ease, width 0.3s ease;
}

.content-list {
  flex: 1;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.movie-card {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.movie-poster {
  width: 200rpx;
  height: 280rpx;
  flex-shrink: 0;
}

.movie-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.movie-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.movie-tags {
  display: flex;
  margin-bottom: 10rpx;
}

.tag {
  background-color: #e8f4ff;
  color: #1890ff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
}

.movie-meta {
  display: flex;
  margin-bottom: 20rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.movie-stats {
  display: flex;
  margin-top: auto;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}

.stat-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}