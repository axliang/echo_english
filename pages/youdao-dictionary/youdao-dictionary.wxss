.youdao-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.browser-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.back-button {
  background: none;
  border: none;
  padding: 10rpx;
  margin-right: 20rpx;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.page-title {
  flex: 1;
  font-size: 28rpx;
  text-align: center;
}

.dictionary-content {
  flex: 1;
}

.section {
  background-color: white;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-header {
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.word-main {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.word-spelling {
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.sound-button {
  background: none;
  border: none;
  padding: 10rpx;
  margin-right: 10rpx;
}

.sound-icon {
  width: 36rpx;
  height: 36rpx;
}

.phonetic {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.translation-item {
  display: flex;
  margin-bottom: 10rpx;
}

.pos {
  font-weight: bold;
  color: #1890ff;
  width: 100rpx;
}

.meaning {
  flex: 1;
}

.collins-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.star-rating {
  display: flex;
}

.star-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 5rpx;
}

.filled {
  filter: brightness(0) saturate(100%) invert(24%) sepia(98%) saturate(2754%) hue-rotate(225deg) brightness(95%) contrast(90%);
}

.definition-list {
  padding-left: 20rpx;
}

.definition-item {
  display: flex;
  margin-bottom: 20rpx;
}

.def-number {
  font-weight: bold;
  margin-right: 10rpx;
}

.def-content {
  flex: 1;
}

.def-text {
  display: block;
  margin-bottom: 10rpx;
}

.example-sentence {
  display: block;
  font-style: italic;
  margin-bottom: 5rpx;
  color: #666;
}

.example-translation {
  display: block;
  color: #999;
  margin-bottom: 15rpx;
}

.web-item {
  display: flex;
  margin-bottom: 15rpx;
}

.web-key {
  width: 200rpx;
  font-weight: bold;
}

.web-value {
  flex: 1;
}