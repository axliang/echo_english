.movie-detail-page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header-section {
  position: relative;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bg-blur {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(20px);
  opacity: 0.6;
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.8));
}

.header-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.back-button {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background: transparent;
  border: none;
  padding: 10rpx;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.movie-poster {
  width: 240rpx;
  height: 340rpx;
  border-radius: 16rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

.movie-title {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 20rpx;
  text-align: center;
}

.stats-bar {
  background-color: white;
  padding: 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.stats-text {
  color: #faad14;
  font-weight: bold;
}

.intro-section {
  background-color: white;
  margin: 20rpx 0;
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.intro-content.collapsed {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.intro-content.expanded {
  display: block;
}

.expand-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
  color: #1890ff;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
  transition: transform 0.3s;
}

.arrow-icon.rotated {
  transform: rotate(180deg);
}

.playlist-section {
  background-color: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.track-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.track-item:last-child {
  border-bottom: none;
}

.track-info {
  flex: 1;
}

.track-title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.track-duration {
  font-size: 24rpx;
  color: #999;
}

.track-actions {
  display: flex;
}

.action-btn {
  background: none;
  border: none;
  padding: 10rpx;
  margin-left: 20rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
}

.more-actions {
  display: flex;
  background-color: white;
  padding: 20rpx;
}

.action-entry {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: none;
  padding: 20rpx;
}

.entry-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}